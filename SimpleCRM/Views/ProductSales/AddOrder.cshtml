@model SimpleCRM.Models.ProductSales

<h1 class="title text-center">Add Order</h1>

@using (Html.BeginForm("InsertSaleToDatabase", "ProductSales", FormMethod.Post))
{
    <div class="form-group">
        <label>Order Number</label>
        <input type="text" class="form-control" value="@ViewBag.OrderNumber" readonly />
        <input type="hidden" name="OrderNumber" value="@ViewBag.OrderNumber" />
    </div>
    <div class="form-group">
        <label class="">Status</label>
        @Html.DropDownList("Status", ViewBag.Statuses, "None", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Customer Name</label>
        @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", placeholder = "Company LLC." })
    </div>
    <div class="form-group">
        <label>Order Date</label>
        @Html.TextBoxFor(x => x.OrderDate, new { @class = "form-control", placeholder = "1/1/2024" })
    </div>
    <div class="form-group">
        <label>Quantity</label>
        @Html.TextBoxFor(x => x.QuantityOrdered, new { @class = "form-control", placeholder = "10" })
    </div>
    <div class="form-group">
        <label id="input1">Price Per Unit</label>
        @Html.TextBoxFor(x => x.PriceEach, new { @class = "form-control", placeholder = "10" })
    </div>
    <div class="form-group">
        <label>Sales Revenue</label>
        @Html.TextBoxFor(x => x.Sales, new { @class = "form-control", placeholder = "100" })
    </div>
    <div class="form-group">
        <label>Product Code</label>
        @Html.DropDownList("ProductCode", ViewBag.ProductCodes, "None", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Unique Identifier Number</label>
        <input type="text" class="form-control" value="@ViewBag.UID" readonly />
        <input type="hidden" name="UID" value="@ViewBag.UID" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
}