@model Contact

<h2>Update @Model.CustomerName</h2>

@using (Html.BeginForm("UpdateContactToDatabase", "Contacts", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CustomerName)

    <label asp-for="ContactFirstName" class="control-label">First Name</label>
    <input type="text" name="ContactFirstName" class="form-control" value="@Model.ContactFirstName" />

    <label asp-for="ContactLastName" class="control-label">Last Name</label>
    <input type="text" name="ContactLastName" class="form-control" value="@Model.ContactLastName" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email" class="form-control" value="@Model.Email" />

    <label asp-for="AddressLine1" class="control-label">Primary Address</label>
    <input type="text" name="AddressLine1" class="form-control" value="@Model.AddressLine1" />

    <label asp-for="Country" class="control-label">Country</label>
    <input type="text" name="Country" class="form-control" value="@Model.Country" />

    <label asp-for="Territory" class="control-label">Territory</label>
    <input type="text" name="Territory" class="form-control" value="@Model.Territory" />

    <label asp-for="PostalCode" class="control-label">Zip Code</label>
    <input type="text" name="PostalCode" class="form-control" value="@Model.PostalCode" />

    <label asp-for="State" class="control-label">State</label>
    <input type="text" name="State" class="form-control" value="@Model.State" />

    <label asp-for="City" class="control-label">City</label>
    <input type="text" name="City" class="form-control" value="@Model.City" />

    <label asp-for="AddressLine2" class="control-label">Secondary Address</label>
    <input type="text" name="AddressLine2" class="form-control" value="@Model.AddressLine2" />

    <input type="submit" value="Update Contact" class="btn btn-primary" />
}
