@model Contact

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">

            <div class="card text-white bg-success mb-3">
                <div class="card-img-top d-flex justify-content-center align-items-center pt-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="225" height="225" fill="#fff" viewBox="0 0 16 16" style="width: 225px; height: 225px;">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.CustomerName</h5>
                </div>
            </div>


            <div class="d-flex justify-content-center">
                @using (Html.BeginForm("UpdateContact", "Contacts", FormMethod.Post, new { @class = "btn-group mx-2" }))
                {
                    @Html.Hidden("customerName", @Model.CustomerName)
                    <button type="submit" class="btn btn-primary">Edit</button>
                }

                @using (Html.BeginForm("DeleteContact", "Contacts", FormMethod.Post, new { @class = "btn-group mx-2" }))
                {
                    @Html.HiddenFor(model => model.CustomerName)
                    <button type="submit" class="btn btn-secondary">Delete this Contact</button>
                }
            </div>

            <br />

            <table class="table table-striped mb-4">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 20%;">Primary Address</th>
                        <td style="width: 80%;">@Model.AddressLine1</td>
                    </tr>
                    <tr>
                        <th scope="row">Country</th>
                        <td>@Model.Country</td>
                    </tr>
                    <tr>
                        <th scope="row">State</th>
                        <td>@Model.State</td>
                    </tr>
                    <tr>
                        <th scope="row">City</th>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <th scope="row">Zip Code</th>
                        <td>@Model.PostalCode</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

