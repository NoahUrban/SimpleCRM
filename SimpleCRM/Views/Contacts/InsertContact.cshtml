@model Contact

<h2>Create Contact</h2>

@using (Html.BeginForm("InsertContactToDatabase", "Contacts", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="CustomerName" class="control-label">Customer Name</label>
        <input type="text" asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactFirstName" class="control-label">First Name</label>
        <input type="text" asp-for="ContactFirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactLastName" class="control-label">Last Name</label>
        <input type="text" asp-for="ContactLastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine1" class="control-label">Primary Address</label>
        <input type="text" asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country" class="control-label">Country</label>
        <input type="text" asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Territory" class="control-label">Territory</label>
        <input type="text" asp-for="Territory" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PostalCode" class="control-label">Zip Code</label>
        <input type="text" asp-for="PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State" class="control-label">State</label>
        <input type="text" asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2" class="control-label">Secondary Address</label>
        <input type="text" asp-for="AddressLine2" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Contact</button>
}