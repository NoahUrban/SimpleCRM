                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-4 mb-3">
        <div class="card text-white bg-success" style="max-width: 20rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="card-title">@ViewBag.TotalAwaitingSale</h4>
                    <p class="card-text">Items Sold</p>
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
                        <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

@model IEnumerable<ProductSales>

<h1 class="title">Pending Orders</h1>
<table class="table table-hover">
    <tr class="table-dark">
        <th scope="col">Order Number</th>
        <th scope="col">Customer Name</th>
        <th scope="col">Order Date</th>
        <th scope="col">Quantity Ordered</th>
        <th scope="col">Price Each</th>
        <th scope="col">Product Code</th>

    </tr>

    @foreach (var sale in @Model)
    {
        if (sale.Status == "In Process")
        {
            <tr>
                <td scope="col">@sale.OrderNumber</td>
                <td scope="col">@sale.CustomerName</td>
                <td scope="col">@sale.OrderDate</td>
                <td scope="col">@sale.QuantityOrdered</td>
                <td scope="col">@sale.PriceEach</td>
                <td scope="col">@sale.ProductCode</td>
            </tr>
        }
    }
    </table>